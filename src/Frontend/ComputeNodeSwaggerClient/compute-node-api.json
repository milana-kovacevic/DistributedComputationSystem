{
  "openapi": "3.0.1",
  "info": {
    "title": "ComputeNode",
    "version": "1.0"
  },
  "paths": {
    "/api/AtomicJob/All": {
      "get": {
        "tags": [
          "AtomicJob"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AtomicJob"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/AtomicJob/Run": {
      "post": {
        "tags": [
          "AtomicJob"
        ],
        "parameters": [
          {
            "name": "atomicJobId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "parentJobId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            },
            "text/json": {
              "schema": {
                "type": "string"
              }
            },
            "application/*+json": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AtomicJobResult"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AtomicJob": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "parentJobId": {
            "type": "integer",
            "format": "int32"
          },
          "data": {
            "type": "string",
            "nullable": true
          },
          "jobType": {
            "$ref": "#/components/schemas/AtomicJobType"
          },
          "startTime": {
            "type": "string",
            "format": "date-time"
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "state": {
            "$ref": "#/components/schemas/AtomicJobState"
          }
        },
        "additionalProperties": false
      },
      "AtomicJobResult": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "parentJobId": {
            "type": "integer",
            "format": "int32"
          },
          "result": {
            "type": "string",
            "nullable": true
          },
          "state": {
            "$ref": "#/components/schemas/AtomicJobState"
          },
          "error": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "AtomicJobState": {
        "enum": [
          "NotRan",
          "InProgress",
          "Succeeded",
          "Failed",
          "Cancelled"
        ],
        "type": "string"
      },
      "AtomicJobType": {
        "enum": [
          "CalculateSumOfDigits"
        ],
        "type": "string"
      }
    }
  }
}